<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools">

	<data>

		<variable
			name="view"
			type="cz.vutbr.fit.brnogo.ui.route.navigation.map.MapView" />

		<variable
			name="viewModel"
			type="cz.vutbr.fit.brnogo.ui.route.navigation.map.MapViewModel" />

	</data>

	<android.support.design.widget.CoordinatorLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<fragment
			android:id="@+id/fragment_map"
			class="com.google.android.gms.maps.SupportMapFragment"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

		<LinearLayout
			android:id="@+id/map_bottom_sheet"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:focusable="true"
			android:orientation="vertical"
			app:behavior_hideable="true"
			app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

			<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/d1"
				android:background="@drawable/ic_shadow" />

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/white">

				<TextView
					android:id="@+id/map_bottom_sheet_route_title"
					style="@style/TextRegular.Grey.16"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/d4"
					android:layout_marginRight="@dimen/d4"
					android:layout_marginTop="@dimen/d8"
					android:gravity="center"
					tools:text="Faster Route" />

			</RelativeLayout>
		</LinearLayout>

		<android.support.design.widget.FloatingActionButton
			android:id="@+id/map_bottom_sheet_navigation_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="@{() -> view.showNavigation()}"
			android:tint="@color/white"
			android:visibility="invisible"
			app:fabSize="normal"
			app:layout_anchor="@id/map_bottom_sheet"
			app:layout_anchorGravity="end"
			app:srcCompat="@drawable/ic_directions"
			app:useCompatPadding="true"
			tools:visibility="visible" />

	</android.support.design.widget.CoordinatorLayout>
</layout>
